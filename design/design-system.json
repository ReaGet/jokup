    "borderRadius": {
      "small": "18px",
      "medium": "18px",
      "large": "24px",
      "xl": "28px",
      "2xl": "rounded-2xl",
      "logo": "24px",
      "button": "18px",
      "input": "rounded-lg",
      "card": "18px",
      "panel": "28px",
      "description": "Generous rounding for modern, friendly appearance. Large radius for main containers, medium for cards and buttons"
    },

    "shadows": {
      "glow": {
        "primary": "0 0 40px rgba(139, 92, 246, 0.35)",
        "accent": "0 0 40px rgba(34, 211, 238, 0.45)",
        "hover": "0 0 60px rgba(34, 211, 238, 0.7)",
        "card": "0 0 25px rgba(34, 211, 238, 0.35)",
        "logo": "0 0 40px rgba(139, 92, 246, 0.6)",
        "description": "Neon glow effects - primary purple for general elements, cyan for interactive states"
      },
      "standard": {
        "sm": "shadow-sm",
        "md": "shadow-md",
        "lg": "shadow-lg",
        "xl": "shadow-xl",
        "2xl": "shadow-2xl"
      },
      "inset": {
        "subtle": "inset 0 0 0 transparent",
        "description": "Subtle inset shadows for depth when needed"
      }
    },

    "effects": {
      "backdropBlur": {
        "value": "16px",
        "sm": "backdrop-blur-sm",
        "lg": "backdrop-blur-lg",
        "usage": "Applied to panel backgrounds for glassmorphism effect"
      },
      "transitions": {
        "fast": "0.12s ease",
        "normal": "0.15s ease",
        "slow": "0.3s ease",
        "duration300": "duration-300",
        "duration500": "duration-500",
        "duration1000": "duration-1000",
        "properties": ["transform", "box-shadow", "border-color", "opacity", "scale"],
        "description": "Smooth, quick transitions for interactive elements"
      },
      "hover": {
        "transform": "translateY(-2px) to translateY(-3px)",
        "scale": "scale-105",
        "description": "Subtle lift effect on hover for buttons and cards"
      },
      "animations": {
        "fadeIn": "animate-fade-in",
        "pulse": "animate-pulse",
        "keyframes": {
          "fade-in": "from { opacity: 0; transform: translateY(-10px); } to { opacity: 1; transform: translateY(0); }",
          "duration": "0.5s ease-out"
        }
      }
    },

