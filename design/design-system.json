        },
        "h4": {
          "size": "18px",
          "weight": 600,
          "usage": "Menu item labels, secondary text"
        },
        "body": {
          "large": "20px",
          "medium": "18px",
          "small": "14px",
          "lineHeight": 1.6,
          "usage": "Main descriptive text, taglines"
