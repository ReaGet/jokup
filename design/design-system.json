    "designPrinciples": {
      "visualHierarchy": {
        "description": "Use size, weight, and color to create clear hierarchy. Largest elements are most important actions.",
        "rules": [
          "Primary actions use largest text (30px+) and boldest weight (900)",
          "Secondary actions use medium text (18px) and medium weight (600)",
          "Supporting text uses smaller sizes (14-20px) with muted colors",
          "Hero titles use 64px+ with weight 900",
          "Section headers use 30-40px with weight 900"
        ]
      },
      "neonAesthetics": {
        "description": "Neon glow effects are signature to this design. Use strategically for emphasis and interactivity.",
        "rules": [
          "Primary glow: rgba(139, 92, 246, 0.35) for general elements",
          "Accent glow: rgba(34, 211, 238, 0.45) for interactive states",
          "Hover glow: Increase intensity to 0.7 for active states",
          "Apply glow to: buttons, logo, main panels, hover states",
          "Use box-shadow property for glow effects"
        ]
      },
      "glassmorphism": {
        "description": "Semi-transparent panels with backdrop blur create depth and modern aesthetic.",
        "rules": [
          "Panel backgrounds: rgba(25, 15, 60, 0.75) with backdrop-filter: blur(16px)",
          "Card backgrounds: rgba(255, 255, 255, 0.04) or bg-black/40 for subtle depth",
          "Always combine transparency with backdrop blur for proper effect",
          "Use backdrop-blur-lg class for Tailwind",
          "Modal overlays: bg-black/60 with backdrop-blur-sm"
        ]
      },
      "gradientUsage": {
        "description": "Gradients add energy and visual interest. Use for primary actions and brand elements.",
        "rules": [
          "Primary gradient (purple to cyan): buttons, logo, key interactive elements",
          "Background gradient (radial): full page backgrounds",
          "Title gradient (yellow-pink-purple): hero titles and important headings",
          "Gradients should always flow from purple (#8b5cf6) to cyan (#22d3ee) at 135deg for primary",
          "Use bg-gradient-to-r from-yellow-400 via-pink-500 to-purple-500 for titles"
        ]
      },
      "interactivity": {
        "description": "All interactive elements should provide clear feedback through hover states.",
        "rules": [
          "Hover: translateY(-2px to -3px) for lift effect",
          "Hover: Change border color to accent cyan (#22d3ee)",
          "Hover: Increase glow intensity",
          "Hover: scale-105 for cards",
          "Transitions: 0.12s-0.15s ease for smooth feel",
          "Use transition-all transform for hover effects"
        ]
      },
      "spacing": {
        "description": "Generous spacing creates breathing room and premium feel.",
        "rules": [
          "Container padding: 48px desktop, 36px tablet, 20px mobile (use clamp for responsive)",
          "Section gaps: 48px for major sections, 28-32px for related content",
          "Card padding: 22px minimum for comfortable content",
          "Button padding: 28px for primary, 22px for secondary",
          "Use responsive padding: clamp(36px, 5vw, 48px)"
        ]
      },
      "typography": {
        "description": "Bold, clear typography with strong hierarchy.",
        "rules": [
          "Use Inter font family for consistency",
          "Weight 900 for primary actions and hero text",
          "Weight 600 for secondary actions and labels",
          "Uppercase with letter-spacing for taglines",
          "Line height 1.6 for body text readability",
          "Use Arial Black for display text in lobby screen",
          "Use responsive font sizes: clamp(38px, 8vw, 64px)"
        ]
      },
      "colorContrast": {
        "description": "Maintain high contrast for accessibility while preserving neon aesthetic.",
        "rules": [
          "Primary text: #f9fafb on dark backgrounds (high contrast)",
          "Muted text: #c7d2fe for secondary information",
          "Interactive elements: Use accent cyan (#22d3ee) for visibility",
          "Always ensure WCAG AA compliance for text readability",
          "Error states: red-300 text on red-500/20 background",
          "Info states: blue-300 text on blue-500/20 background"
        ]
      },
      "responsiveDesign": {
        "description": "Design scales gracefully from desktop to mobile.",
        "rules": [
          "Breakpoint at 1000px: Switch to single column layout",
          "Breakpoint at 520px: Reduce padding and font sizes",
          "Breakpoint at 768px (md): Switch grid layouts",
          "Maintain same visual style across all sizes",
          "Touch targets: Minimum 44px for mobile interactions",
          "Use clamp() for responsive sizing: clamp(min, preferred, max)",
          "Use Tailwind responsive prefixes: md:, lg:"
        ]
      },
      "consistency": {
        "description": "Maintain consistent patterns across all components.",
        "rules": [
          "All cards use same border radius (18px), padding (22px), and hover effects",
          "All buttons follow primary or secondary button patterns",
          "All panels use same glassmorphism treatment",
          "Glow effects use consistent color and intensity patterns",
          "All timers use same styling (yellow border, large text)",
          "All modals use same overlay and container styling"
        ]
      },
      "gameStateColors": {
        "description": "Different game states use specific color schemes for visual distinction.",
        "rules": [
          "Lobby: Green theme (#1a4d3a) with diagonal stripes",
          "Voting: Purple-blue gradient background, blue/pink for answers",
          "Scoreboard: Purple-blue gradient, yellow/gray/orange for positions",
          "Timer: Yellow border and text, red when <= 10 seconds",
          "Winner: Yellow emphasis with strong glow",
          "Error: Red theme, Info: Blue theme"
        ]
      }
    },

