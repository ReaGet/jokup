      "weights": {
        "normal": 400,
        "medium": 600,
        "semibold": 600,
        "bold": 700,
        "extrabold": 800,
        "black": 900
      },
      "effects": {
        "gradientText": "bg-gradient-to-r from-yellow-400 via-pink-500 to-purple-500 bg-clip-text text-transparent",
        "textShadow": "3px 3px 0px rgba(0, 0, 0, 0.8), -1px -1px 0px rgba(255, 255, 255, 0.3)",
        "dropShadow": "drop-shadow(0 0 8px rgba(255, 255, 255, 0.5))"
      }
    },

    "spacing": {
      "scale": {
        "xs": "4px",
        "sm": "8px",
        "md": "12px",
        "lg": "16px",
        "xl": "20px",
        "2xl": "22px",
        "3xl": "28px",
        "4xl": "32px",
        "5xl": "36px",
        "6xl": "40px",
        "7xl": "48px"
      },
      "padding": {
        "container": "48px",
        "containerMobile": "36px",
        "containerSmall": "20px",
        "containerResponsive": "clamp(36px, 5vw, 48px)",
